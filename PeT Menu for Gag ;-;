    self.UI.NotificationLabel = CreateElement("TextLabel", { Parent = self.UI.ScreenGui, Size = UDim2.new(0, 320, 0, 45), Position = UDim2.new(0.5, -160, 0.75, 0), BackgroundColor3 = CONFIG.UI.Colors.Header, BackgroundTransparency = 1, TextColor3 = CONFIG.UI.Colors.Text, TextTransparency = 1, Font = CONFIG.UI.Font, TextScaled = true, Visible = false, ZIndex = 10 }); CreateElement("UICorner", { Parent = self.UI.NotificationLabel })

    self.UI.SettingsPanel = CreateElement("Frame", {
        Name = "SettingsPanel",
        Parent = self.UI.MainFrame,
        Size = UDim2.new(1, -10, 1, -40),
        Position = UDim2.new(0.5, 0, 0, 35),
        AnchorPoint = Vector2.new(0.5, 0),
        BackgroundColor3 = CONFIG.UI.Colors.Primary,
        BorderSizePixel = 0,
        Visible = false
    })
    CreateElement("UICorner", { CornerRadius = UDim.new(0, 6), Parent = self.UI.SettingsPanel })
    CreateElement("UIPadding", { PaddingLeft = UDim.new(0, 10), PaddingRight = UDim.new(0, 10), PaddingTop = UDim.new(0, 10), PaddingBottom = UDim.new(0, 10), Parent = self.UI.SettingsPanel })
    local settingsLayout = CreateElement("UIListLayout", {
        Parent = self.UI.SettingsPanel,
        FillDirection = Enum.FillDirection.Vertical,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 8)
    })
    self.UI.SettingEquipDelay = createSettingRow(self.UI.SettingsPanel, "Equip Delay:", CONFIG.EQUIP_DELAY, 1)
    self.UI.SettingNotifyDuration = createSettingRow(self.UI.SettingsPanel, "Notification Duration:", CONFIG.NOTIFY_DURATION, 2)
    self.UI.SettingAutoReequipInterval = createSettingRow(self.UI.SettingsPanel, "Auto Re-equip Interval:", CONFIG.AUTO_REEQUIP_INTERVAL, 3)
    self.UI.SettingMaxPets = createSettingRow(self.UI.SettingsPanel, "Max Pets:", CONFIG.MAX_PETS, 4)
    self.UI.SettingPetFormationRadius = createSettingRow(self.UI.SettingsPanel, "Pet Formation Radius:", CONFIG.PET_FORMATION.Radius, 5)
    self.UI.SettingPetFormationVerticalOffset = createSettingRow(self.UI.SettingsPanel, "Pet Formation Vertical Offset:", CONFIG.PET_FORMATION.VerticalOffset, 6)
    local settingsButtonsFrame = CreateElement("Frame", {
        Parent = self.UI.SettingsPanel,
        Size = UDim2.new(1, 0, 0, 30),
        BackgroundTransparency = 1,
        LayoutOrder = 7
    })
    CreateElement("UIListLayout", { Parent = settingsButtonsFrame, FillDirection = Enum.FillDirection.Horizontal, SortOrder = Enum.SortOrder.LayoutOrder, Padding = UDim.new(0, 5), HorizontalAlignment = Enum.HorizontalAlignment.Center })
    local applySettingsBtn = CreateElement("TextButton", {
        Parent = settingsButtonsFrame,
        Size = UDim2.new(0.33, -5, 1, 0),
        Text = "Apply",
        Font = CONFIG.UI.Font,
        BackgroundColor3 = CONFIG.UI.Colors.Success,
        TextColor3 = CONFIG.UI.Colors.Text,
        TextScaled = true,
        LayoutOrder = 1
    })
    local resetSettingsBtn = CreateElement("TextButton", {
        Parent = settingsButtonsFrame,
        Size = UDim2.new(0.33, -5, 1, 0),
        Text = "Reset",
        Font = CONFIG.UI.Font,
        BackgroundColor3 = CONFIG.UI.Colors.Warning,
        TextColor3 = CONFIG.UI.Colors.Text,
        TextScaled = true,
        LayoutOrder = 2
    })
    local closeSettingsBtn = CreateElement("TextButton", {
        Parent = settingsButtonsFrame,
        Size = UDim2.new(0.33, -5, 1, 0),
        Text = "Close",
        Font = CONFIG.UI.Font,
        BackgroundColor3 = CONFIG.UI.Colors.Error,
        TextColor3 = CONFIG.UI.Colors.Text,
        TextScaled = true,
        LayoutOrder = 3
    })

    self:LoadTeams(); self:RefreshTeams(); self:RefreshPreview()

    if CONFIG.AUTO_TRACK_MANUAL_EQUIPS then
        local function setupCharacterListeners(character)
            if not character then return end
            character.DescendantAdded:Connect(function(descendant)
                local uuid = descendant:GetAttribute("PET_UUID")
                if uuid and descendant:IsA("Model") and not self.processingPets[uuid] then
                    if not table.find(self.equippedPets, uuid) then
                        table.insert(self.equippedPets, uuid)
                        self:Notify("Tracked a manually equipped pet.", CONFIG.UI.Colors.Info)
                    end
                end
            end)
            character.DescendantRemoving:Connect(function(descendant)
                local uuid = descendant:GetAttribute("PET_UUID")
                if uuid and descendant:IsA("Model") and not self.processingPets[uuid] then
                    local index = table.find(self.equippedPets, uuid)
                    if index then
                        table.remove(self.equippedPets, index)
                        self:Notify("A manually equipped pet was removed.", CONFIG.UI.Colors.Warning)
                    end
                end
            end)
        end
        
        task.wait(1)
        self.equippedPets = self:ScanForEquippedPets()
        if CONFIG.SCAN_WORKSPACE_FOR_ACTIVE_PETS then
            local activeWorkspacePets = self:ScanForActivePets()
            for _, id in ipairs(activeWorkspacePets) do
                if not table.find(self.equippedPets, id) then
                    table.insert(self.equippedPets, id)
                end
            end
        end

        if #self.equippedPets > 0 then
            self:Notify(string.format("Found and tracking %d equipped pet(s).", #self.equippedPets), CONFIG.UI.Colors.Info)
        end
        
        if player.Character then setupCharacterListeners(player.Character) end
        player.CharacterAdded:Connect(setupCharacterListeners)

        if CONFIG.SCAN_WORKSPACE_FOR_ACTIVE_PETS then
            local petsPhysicalFolder = workspace:FindFirstChild("PetsPhysical")
            if petsPhysicalFolder then
                petsPhysicalFolder.DescendantAdded:Connect(function(descendant)
                    if descendant:IsA("Model") and isUUID(descendant.Name) and not self.processingPets[descendant.Name] then
                        local uuid = descendant.Name
                        if not table.find(self.equippedPets, uuid) then
                            table.insert(self.equippedPets, uuid)
                            self:Notify("Tracked a newly active pet in workspace.", CONFIG.UI.Colors.Info)
                        end
                    end
                end)
                petsPhysicalFolder.DescendantRemoving:Connect(function(descendant)
                    if descendant:IsA("Model") and isUUID(descendant.Name) and not self.processingPets[descendant.Name] then
                         local uuid = descendant.Name
                         local index = table.find(self.equippedPets, uuid)
                         if index then
                            table.remove(self.equippedPets, index)
                            self:Notify("An active pet was removed from the workspace.", CONFIG.UI.Colors.Warning)
                        end
                    end
                end)
            end
        end
    end
    
    minimizeBtn.MouseButton1Click:Connect(function()
        self.isMinimized = not self.isMinimized
        if self.isMinimized then
            self.UI.MainFrame.Size = UDim2.new(0, 200, 0, 30)
            contentFrame.Visible = false
            self.UI.SettingsPanel.Visible = false
            minimizeBtn.Text = "+"
        else
            self.UI.MainFrame.Size = UDim2.new(0, CONFIG.UI.InitialSize.X, 0, CONFIG.UI.InitialSize.Y)
            if self.currentView == "main" then
                contentFrame.Visible = true
                self.UI.SettingsPanel.Visible = false
            else
                contentFrame.Visible = false
                self.UI.SettingsPanel.Visible = true
            end
            minimizeBtn.Text = "‚àí"
        end
    end)
    
    settingsBtn.MouseButton1Click:Connect(function()
        self.currentView = "settings"
        contentFrame.Visible = false
        self.UI.SettingsPanel.Visible = true
        self.isMinimized = false
        self.UI.MainFrame.Size = UDim2.new(0, CONFIG.UI.InitialSize.X, 0, CONFIG.UI.InitialSize.Y)
        minimizeBtn.Text = "‚àí"
        self:Notify("Settings panel opened.", CONFIG.UI.Colors.Info)
        
        self.UI.SettingEquipDelay.Text = tostring(CONFIG.EQUIP_DELAY)
        self.UI.SettingNotifyDuration.Text = tostring(CONFIG.NOTIFY_DURATION)
        self.UI.SettingAutoReequipInterval.Text = tostring(CONFIG.AUTO_REEQUIP_INTERVAL)
        self.UI.SettingMaxPets.Text = tostring(CONFIG.MAX_PETS)
        self.UI.SettingPetFormationRadius.Text = tostring(CONFIG.PET_FORMATION.Radius)
        self.UI.SettingPetFormationVerticalOffset.Text = tostring(CONFIG.PET_FORMATION.VerticalOffset)
    end)
    
    closeSettingsBtn.MouseButton1Click:Connect(function()
        self.currentView = "main"
        self.UI.SettingsPanel.Visible = false
        contentFrame.Visible = true
        self:Notify("Settings panel closed.", CONFIG.UI.Colors.Info)
    end)

    applySettingsBtn.MouseButton1Click:Connect(function()
        local success = true
        
        local equipDelay = tonumber(self.UI.SettingEquipDelay.Text)
        local notifyDuration = tonumber(self.UI.SettingNotifyDuration.Text)
        local autoReequipInterval = tonumber(self.UI.SettingAutoReequipInterval.Text)
        local maxPets = tonumber(self.UI.SettingMaxPets.Text)
        local petFormationRadius = tonumber(self.UI.SettingPetFormationRadius.Text)
        local petFormationVerticalOffset = tonumber(self.UI.SettingPetFormationVerticalOffset.Text)

        if equipDelay and equipDelay >= 0 then CONFIG.EQUIP_DELAY = equipDelay else success = false end
        if notifyDuration and notifyDuration >= 0 then CONFIG.NOTIFY_DURATION = notifyDuration else success = false end
        if autoReequipInterval and autoReequipInterval >= 0 then CONFIG.AUTO_REEQUIP_INTERVAL = autoReequipInterval else success = false end
        if maxPets and maxPets >= 1 then CONFIG.MAX_PETS = maxPets else success = false end
        if petFormationRadius and petFormationRadius >= 0 then CONFIG.PET_FORMATION.Radius = petFormationRadius else success = false end
        if petFormationVerticalOffset and petFormationVerticalOffset >= 0 then CONFIG.PET_FORMATION.VerticalOffset = petFormationVerticalOffset else success = false end

        if success then
            self:SaveSettings()
            self:Notify("Settings applied and saved successfully.", CONFIG.UI.Colors.Success)
            self.UI.NumberBox.Text = tostring(CONFIG.MAX_PETS)
        else
            self:Notify("Invalid input. Please enter valid numbers.", CONFIG.UI.Colors.Error)
        end
    end)
    
    resetSettingsBtn.MouseButton1Click:Connect(function()
        self:ResetSettings()
        self.UI.SettingEquipDelay.Text = tostring(CONFIG.EQUIP_DELAY)
        self.UI.SettingNotifyDuration.Text = tostring(CONFIG.NOTIFY_DURATION)
        self.UI.SettingAutoReequipInterval.Text = tostring(CONFIG.AUTO_REEQUIP_INTERVAL)
        self.UI.SettingMaxPets.Text = tostring(CONFIG.MAX_PETS)
        self.UI.SettingPetFormationRadius.Text = tostring(CONFIG.PET_FORMATION.Radius)
        self.UI.SettingPetFormationVerticalOffset.Text = tostring(CONFIG.PET_FORMATION.VerticalOffset)
        self.UI.NumberBox.Text = tostring(CONFIG.MAX_PETS)
    end)

    togglePreviewBtn.MouseButton1Click:Connect(function()
        self.previewVisible = not self.previewVisible
        midCol.Visible = self.previewVisible
        togglePreviewBtn.Text = self.previewVisible and "üëÅ Preview: ON" or "üåë Preview: OFF"
        togglePreviewBtn.BackgroundColor3 = self.previewVisible and CONFIG.UI.Colors.Success or CONFIG.UI.Colors.Error
        if self.previewVisible then self:RefreshPreview() end
    end)
    self.UI.PetNameBox:GetPropertyChangedSignal("Text"):Connect(function() self:RefreshPreview() end)

    equipBtn.MouseButton1Click:Connect(function()
        local numToEquip = tonumber(self.UI.NumberBox.Text) or CONFIG.MAX_PETS
        numToEquip = math.clamp(numToEquip, 1, CONFIG.MAX_PETS)
        local toEquip = {}
        for id, _ in pairs(self.selectedPets) do
            if #toEquip < numToEquip then table.insert(toEquip, id) end
        end
        if #toEquip < numToEquip then
            local filteredPets = self:GetPetToolsByName(self.UI.PetNameBox.Text)
            for _, pet in ipairs(filteredPets) do
                if #toEquip >= numToEquip then break end
                if not self.selectedPets[pet.id] then table.insert(toEquip, pet.id) end
            end
        end
        if #toEquip > 0 then
            self:EquipPets(toEquip)
            self:Notify(string.format("Equipped %d pet(s).", #toEquip), CONFIG.UI.Colors.Success)
        else
            self:Notify("No pets found or selected to equip.", CONFIG.UI.Colors.Warning)
        end
    end)

    unequipAllBtn.MouseButton1Click:Connect(function()
        local petsToUnequip = table.clone(self.equippedPets)
        if #petsToUnequip == 0 then
            self:Notify("No pets are currently equipped.", CONFIG.UI.Colors.Warning)
            return
        end
        self:UnequipPets(petsToUnequip)
        self:Notify(string.format("Unequipped %d pet(s).", #petsToUnequip), CONFIG.UI.Colors.Error)
    end)

    clearPreviewBtn.MouseButton1Click:Connect(function()
        self.selectedPets = {}
        self:RefreshPreview()
        self:Notify("Cleared all selected pets from the preview.", CONFIG.UI.Colors.Info)
    end)

    saveTeamBtn.MouseButton1Click:Connect(function()
        local selectedIds = {}; for id, _ in pairs(self.selectedPets) do table.insert(selectedIds, id) end
        if #selectedIds == 0 then self:Notify("Select pets in the preview list to save a team.", CONFIG.UI.Colors.Warning); return end
        local inputFrame = CreateElement("Frame", { Parent = self.UI.MainFrame, Size = UDim2.new(1,0,1,0), BackgroundColor3 = Color3.new(0,0,0), BackgroundTransparency = 0.4, ZIndex = 2 })
        local inputBox = CreateElement("TextBox", { Parent = inputFrame, Size = UDim2.new(0.5, 0, 0, 40), Position = UDim2.fromScale(0.5, 0.4), AnchorPoint = Vector2.new(0.5, 0.5), PlaceholderText = "Enter New Team Name...", Font = CONFIG.UI.Font, BackgroundColor3 = CONFIG.UI.Colors.Secondary, TextColor3 = CONFIG.UI.Colors.Text, TextScaled = true }); inputBox:CaptureFocus()
        inputBox.FocusLost:Connect(function(enter)
            if enter and inputBox.Text:len() > 0 then
                local teamName = inputBox.Text
                if self.TeamsData[teamName] then self:Notify("A team with that name already exists.", CONFIG.UI.Colors.Error)
                else self.TeamsData[inputBox.Text] = selectedIds; self:SaveTeams(); self:RefreshTeams(); self:Notify("Saved team: " .. teamName, CONFIG.UI.Colors.Success); self.selectedPets = {}; self:RefreshPreview() end
            end
            inputFrame:Destroy()
        end)
    end)
    
    quickEquipBtn.MouseButton1Click:Connect(function()
        if #self.QuickEquipTeam == 0 then
            self:Notify("No Quick Equip team saved. Select pets and press 'S'.", CONFIG.UI.Colors.Warning)
            return
        end
        self:UnequipPets(self.equippedPets) 
        self.equippedPets = {} 
        self:EquipPets(self.QuickEquipTeam)
        self:Notify("Equipped Quick Team.", CONFIG.UI.Colors.Info)
        
    end)

    saveQuickBtn.MouseButton1Click:Connect(function()
        local selectedIds = {}
        for id, _ in pairs(self.selectedPets) do table.insert(selectedIds, id) end
        
        if #selectedIds == 0 then
            self:Notify("Select pets in the preview list to save.", CONFIG.UI.Colors.Warning)
            return
        end
        
        self.QuickEquipTeam = selectedIds
        self:SaveTeams()
        self:Notify("Saved Quick Equip team.", CONFIG.UI.Colors.Success)
    end)
    
    copyAllPetsBtn.MouseButton1Click:Connect(function()
        local allPets = self:GetPetToolsByName("")
        local petNames = {}
        for _, pet in ipairs(allPets) do
            table.insert(petNames, pet.name)
        end
        
        local petListString = table.concat(petNames, "\n")
        
        local success, err = pcall(function()
            setclipboard(petListString)
        end)
        
        if success then
            self:Notify("Copied pet list to clipboard!", CONFIG.UI.Colors.Success)
        else
            self:Notify("Failed to copy pet list: " .. tostring(err), CONFIG.UI.Colors.Error)
        end
    end)

    autoReequipToggle.MouseButton1Click:Connect(function()
        self.autoReequipEnabled = not self.autoReequipEnabled
        if self.autoReequipEnabled then
            autoReequipToggle.Text = "‚òë Auto Re-Equip (Using Quick Team)"
            autoReequipToggle.BackgroundColor3 = CONFIG.UI.Colors.Success
            self:Notify("Auto Re-Equip ENABLED. Using Quick Team.", CONFIG.UI.Colors.Success)
        else
            autoReequipToggle.Text = "‚òê Auto Re-Equip"
            autoReequipToggle.BackgroundColor3 = CONFIG.UI.Colors.Secondary
            self:Notify("Auto Re-Equip DISABLED.", CONFIG.UI.Colors.Error)
        end
    end)

    task.spawn(function()
        while self.UI.MainFrame and self.UI.MainFrame.Parent do
            if self.autoReequipEnabled and #self.QuickEquipTeam > 0 then
                self:UnequipPets(self.equippedPets) 
                self.equippedPets = {} 
                self:EquipPets(self.QuickEquipTeam)
            end
            task.wait(CONFIG.AUTO_REEQUIP_INTERVAL)
        end
    end)
end

PetTeamManager:Init()
